<% if current_evaluator.try(:admin?) %>
  <h1>Evaluators_admin</h1>
<% else %>
  <h1>Evaluators</h1>
<% end %>

<h1>Voices</h1>

<table>
  <thead>
    <tr>
      <th>Staff num</th>
      <th>Evaluator</th>
      <th>Year month</th>
      <th>Contact details</th>
      <th>Response result</th>
      <th>Evaluator comment</th>
      <th>Score</th>
      <th>Rank</th>
      <th>Status</th>
      <th>Item one</th>
      <th>Item two</th>
      <th>Item three</th>
      <th>Item four</th>
      <th>Item five</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @voices.each do |voice| %>
      <tr>
        <td><%= voice.staff_num %></td>
        <td><%= voice.evaluator_id %></td>
        <td><%= voice.year_month %></td>
        <td><%= voice.contact_details %></td>
        <td><%= voice.response_result %></td>
        <td><%= voice.evaluator_comment %></td>
        <td><%= voice.score %></td>
        <td><%= voice.rank %></td>
        <td><%= voice.status %></td>
        <td><%= voice.item_one %></td>
        <td><%= voice.item_two %></td>
        <td><%= voice.item_three %></td>
        <td><%= voice.item_four %></td>
        <td><%= voice.item_five %></td>
        <td><%= link_to 'Show', voice %></td>
        <td><%= link_to 'Edit', edit_voice_path(voice) %></td>
        <td><%= link_to 'Destroy', voice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Voice', new_voice_path %>
