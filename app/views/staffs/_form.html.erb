<%= form_with(model: staff, local: true) do |form| %>
<% if staff.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(staff.errors.count, "error") %>
      prohibited this staff from being saved:</h2>

    <ul>
      <% staff.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<br><br>
<div class="table-responsive">
  <table class="table">
    <tr>
      <th class="info">
        <%= form.label :スタッフID %></th>
      <th class="info">
        <%= form.label :地域 %></th>
      <th class="info">
        <%= form.label :リリース期 %></th>
      <th class="info">
        <%= form.label :スタッフ名 %></th>
      <th class="info">
        <%= form.label :評価サイクル %></th>
    </tr>

    <tr>
      <div class="field">
        <th>
          <%= form.text_field :staff_num, id: :staff_staff_num %></th>
      </div>

      <div class="field">
        <th><%= form.select :staff_area, [["北海道", "北海道"], ["東北", "東北"], ["関東", "関東"], ["東海", "東海"], ["甲信越", "甲信越"], ["関西", "関西"], ["中国", "中国"], ["四国", "四国"], ["九州", "九州"], ["沖縄", "沖縄"]],:include_blank => true %></th>
      </div>

      <div class="field">
        <th>
          <%= form.text_field :release_time, id: :staff_release_time %>期</th>
      </div>

      <div class="field">

        <th>
          <%= form.text_field :staff_name, id: :staff_staff_name %></th>
      </div>

      <div class="field">

        <!--%= form.number_field :evaluation_cycle, id: :staff_evaluation_cycle %-->
        <th><%= form.select :evaluation_cycle, [["1", "1"], ["3", "3"]],:include_blank => true %>ヶ月</th>
      </div>

    </table>
  </div>
</tbody>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
