<h1>スタッフ一覧</h1>

<table>
  <thead>
    <tr>
      <th>スタッフID</th>
      <th>スタッフ名</th>
      <th>評価サイクル</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.staff_num %></td>
        <td><%= staff.staff_name %></td>
        <td><%= staff.evaluation_cycle %></td>
        <td><%= link_to '詳細', staff %></td>
        <td><%= link_to '編集', edit_staff_path(staff) %></td>
        <td><%= link_to '削除', staff, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

