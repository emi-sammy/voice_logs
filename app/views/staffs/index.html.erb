<h1>スタッフ一覧</h1>


<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>スタッフID</th>
      <th>スタッフ名</th>
      <th>評価サイクル</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>

    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.staff_num %></td>
        <td><%= staff.staff_name %></td>
        <td><%= staff.evaluation_cycle %>ヶ月</td>
        <td><button class="btn-success" type="submit"><%= link_to '詳細', staff %></button></td>
        <td><button class="btn-info" type="submit"><%= link_to '編集', edit_staff_path(staff) %></button></td>
        <td><button class="btn-danger" type="submit"><%= link_to '削除', staff, method: :delete, data: { confirm: '削除しますか?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>
</div>
<br>

  <td><button btn-lg class="btn-info btn-lg" type="submit"><%= link_to 'スタッフ新規登録', new_staff_path %></button></td>
