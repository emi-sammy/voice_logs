<h1>評価一覧</h1>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>スタッフID</th>
      <th>スタッフ名</th>
      <th>評価者id</th>
      <th>評価者</th>
      <th>通話開始月日</th>
      <th>通話開始時間</th>
      <th>ステータス</th>
      <th>顧客のミス</th>
      <th>ビジネスのミス</th>
      <th>コンプラのミス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @voice_checks.each do |voice_check| %>
      <% staff_n = voice_check.staff_num %>
      <tr>
        <td><%= staff_n %></td>

        <td><%= voice_check.evaluator_id %></td>
        <td><%= voice_check.evaluator_name %></td>
        <td><%= voice_check.log_date %></td>
        <td><%= voice_check.log_time %></td>
        <td><%= voice_check.status %></td>
        <td><%= voice_check.customer_miss %></td>
        <td><%= voice_check.business_miss %></td>
        <td><%= voice_check.compliance_miss %></td>
        <td><button class="btn-success" type="submit"><%= link_to '詳細', voice_check %></button></td>
        <td><button class="btn-info" type="submit"><%= link_to '編集', edit_voice_check_path(voice_check) %></button></td>
        <td><button class="btn-danger" type="submit"><%= link_to '削除', voice_check, method: :delete, data: { confirm: '削除しますか?' } %></button></td>

      </tr>
    <% end %>
  </tbody>
</table>
</div>
